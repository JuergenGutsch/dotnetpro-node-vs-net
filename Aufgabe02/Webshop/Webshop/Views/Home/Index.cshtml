@using Antlr.Runtime.Tree
@model Webshop.Models.CategoriesModel
@{
    ViewBag.Title = "Home Page";
    var i = 0;
}

<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-9">
        <h2>Categories</h2>
    </div>
</div>


<div class="row">
    <div class="col-md-3">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var category in Model.Categories)
            {
                <li>
                    @Html.ActionLink(category.CategoryName, "Articles", new { id = category.Id })
                </li>
            }
        </ul>
    </div>
    <div class="col-md-9">
        @foreach (var category in Model.Categories)
        {
            if (i == 0)
            {
                @Html.Raw("<div class=\"row\">")
            }

            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@category.CategoryName</h3>
                    </div>
                    <div class="panel-body">
                        @category.Description
                    </div>
                    <div class="panel-footer">
                        @Html.ActionLink("Artikel anzeigen »", "Articles", new { id = category.Id }, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>

            i++;
            if (i == 3)
            {
                @Html.Raw("</div>")
                i = 0;
            }
        }
        @if (Model.Categories.Count() % 3 != 0)
        {
            @Html.Raw("</div>")
        }
    </div>
</div>

